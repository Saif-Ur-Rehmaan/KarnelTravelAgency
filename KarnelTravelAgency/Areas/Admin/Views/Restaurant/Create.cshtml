@model RestaurantCreateViewModel
<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            <div class="row justify-content-between">
                <div class="col-auto">Restaurant Create</div>
                <div class="col-auto"><a href="/Hotel/Create" class="btn btn-outline-primary px-3 py-2">Create</a></div>
            </div>
        </h4>
        <h6 class="card-subtitle">Add class <code>.table</code></h6>
        <div class="row justify-content-center align-items-center">
            <div class="col-8">
                <form method="post" action="/Restaurant/Create" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label asp-for="@Model.RestaurantName" class="form-label">Hotel Name</label>
                        <input asp-for="@Model.RestaurantName" type="text" class="form-control border border-dark">
                        <span class="text-danger" asp-validation-for="@Model.RestaurantName"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Location" class="form-label">Hotel Location</label>
                        <input asp-for="@Model.Location" type="text" class="form-control border border-dark">
                        <span class="text-danger" asp-validation-for="@Model.Location"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Rating" class="form-label">Hotel Rating</label>
                        <input asp-for="@Model.Rating" type="text" class="form-control border border-dark">
                        <span class="text-danger" asp-validation-for="@Model.Rating"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.CuisineType" class="form-label">Hotel Rating</label>
                        <input asp-for="@Model.CuisineType" type="text" class="form-control border border-dark">
                        <span class="text-danger" asp-validation-for="@Model.CuisineType"></span>
                    </div>


                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>