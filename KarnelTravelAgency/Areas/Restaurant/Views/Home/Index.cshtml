@model List<RestaurantViewModel>


<style>
    .kingho_block__25 .image {
        overflow: hidden;
    }

    .kingho_block__25 img {
        transition: .5s;
    }

    .kingho_block__25:hover img {
        transform: scale(1);
    }

    .kingho_block__25 .icon-list ul {
        display: flex;
        /* flex-wrap: wrap; */
        padding-bottom: 10px;
        list-style: none;
    }

    .kingho_block__25 ul li {
        margin-right: 29px;
    }

        .kingho_block__25 ul li i {
            color: var(--theme-color);
        }

    .kingho_block__25 h4 {
        font-size: 14px;
        line-height: 22px;
        color: #111111;
        font-weight: 500;
        font-family: "Roboto";
        margin-top: 10px;
    }

    .kingho_block__25 .text {
        font-size: 14px;
        line-height: 22px;
        color: #777777;
        font-weight: 400;
        font-family: "Roboto";
    }

    .kingho_block__25 h3 {
        font-size: 24px;
        letter-spacing: -1px;
        line-height: 1.2em;
        color: #111111;
        font-weight: 600;
        margin-bottom: 27px;
    }

    .kingho_block__25 {
        position: relative;
        margin: 0 auto;
        margin-bottom: 30px;
        max-width: 410px;
    }

        .kingho_block__25 .lower-content {
            filter: drop-shadow(0px 14px 14px rgba(0, 0, 0, 0.04));
            background-color: #ffffff;
            border: 2px solid #f3f3f3;
            padding: 40px;
        }

        .kingho_block__25 .pricing {
            position: absolute;
            top: -15px;
            right: 40px;
            background-color: var(--theme-color);
            padding: 1px 10px;
            font-size: 14px;
            line-height: 28px;
            color: #ffffff;
            font-weight: 700;
            font-family: "Roboto";
            text-align: center;
        }

        .kingho_block__25 a.theme-btn.btn-style-four {
            background-color: #ffffff;
            border: 2px solid #eaeaea;
            display: inline-block;
            padding: 9px 23px;
            font-size: 16px;
            line-height: 30px;
            text-decoration: underline;
            color: var(--theme-color);
            font-weight: 700;
            font-family: "Roboto";
            text-align: center;
        }

    .page-title {
        position: relative;
        padding: 160px 0px 130px;
        text-align: center;
        background-size: cover;
        background-color: #fff;
        margin-top: -35px;
    }

        .page-title > .theme__container > .content-box > .content-wrapper > .title > h1 {
            color: var(--theme-color) !important;
            text-transform: uppercase;
            background: rgba(0,0,0,0.3);
            width: fit-content;
        }
</style>
<section class="page-title" style="background-image: url(img/blog/blog-s-1-4.jpg)">
    <div class="theme__container">
        <div class="content-box">
            <div class="content-wrapper">
                <div class="title d-flex justify-content-center"><h1>Restaurants</h1></div>
            </div>
        </div>
    </div>
</section>
<div class="container">
    <div class="row flex-row justify-content-center align-items-center my-5 py-5">
        <div class="col ">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Advance Search  Search By : Restaurant Name , location , Rating, Restaurant Type" id="SearchField" />
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row" id="CardContainer">
        @foreach (var restaurant in Model)
        {
            <div class="col-lg-4">
                <div class="kingho_block__25">
                    <div class="image">
                        <img src="assets/images/resource/image-30.jpg" alt="" />
                    </div>
                    <div class="lower-content">
                        <div class="pricing">Rating: @restaurant.Rating</div>
                        <div class="icon-list">
                            <ul>
                                <li>
                                    <i class="flaticon-preview"></i>
                                    <h4>Cuisine:</h4>
                                    <div class="text">@restaurant.CuisineType</div>
                                </li>
                                <li>
                                    <i class="flaticon-user"></i>
                                    <h4>Location:</h4>
                                    <div class="text">@restaurant.Location</div>
                                </li>
                            </ul>
                        </div>
                        <h3>@restaurant.RestaurantName</h3>
                        <a href="/SingleRestaurant/@restaurant.RestaurantID" class="theme-btn btn-style-four"><span>View Restaurant</span></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(() => {
            $("#SearchField").on("keyup", ChangeData);

            function ChangeData() {
                let query = $("#SearchField").val();
                console.log(query);
                $.ajax({
                    url: "/AjaxSearch_Restaurant",
                    method: "POST",
                    data: {
                        Query: query
                    },
                    success: function (response) {
                        try {
                            console.log(response);
                            let data = response;
                            console.log(data);
                            let c = $("#CardContainer");
                            let html;
                            if (data.length == 0) {
                                html = "<h1>No Data Available</h1>";
                                console.log("nodata available");
                            } else {
                                html = "";
                                for (i = 0; i < data.length; i++) {
                                    let card = data[i];
                                    let id = card["RestaurantID"];
                                    let Type = card["CuisineType"];
                                    let Name = card["RestaurantName"];
                                    let Location = card["Location"];
                                    let Rating = card["Rating"];
                                    html += `

                                                 <div class="col-lg-4">
                                                    <div class="kingho_block__25">
                                                        <div class="image">
                                                            <img src="assets/images/resource/image-30.jpg" alt="" />
                                                        </div>
                                                        <div class="lower-content">
                                                            <div class="pricing">Rating:${Rating}</div>
                                                            <div class="icon-list">
                                                                <ul>
                                                                    <li>
                                                                        <i class="flaticon-preview"></i>
                                                                        <h4>Cuisine:</h4>
                                                                        <div class="text">${Type}</div>
                                                                    </li>
                                                                    <li>
                                                                        <i class="flaticon-user"></i>
                                                                        <h4>Location:</h4>
                                                                        <div class="text">${location}</div>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                            <h3>${Name}</h3>
                                                            <a href="/SingleRestaurant/${id}" class="theme-btn btn-style-four"><span>View Restaurant</span></a>
                                                        </div>
                                                    </div>
                                                </div>

                                                    `;
                                }





                                console.log("data available");
                            }
                            c.html(html);
                        } catch (error) {
                            console.error("Error parsing JSON:", error);
                        }
                    },
                    error: function (error) {
                        console.error("AJAX Error:", error);
                    }
                });
            }
        });
    </script>
}