@model List<RestaurantViewModel>


<h1>List Of All Restaurents </h1>
 
<div class="container">
    <ul class="list-group">
        @foreach (var restaurant in Model)
        {
            <li class="list-group-item">
                <div class="row">
                    <div class="col">
                        <h5>@restaurant.RestaurantName</h5>
                        <p>@restaurant.Location</p>
                        <p>Cuisine: @restaurant.CuisineType</p>
                    </div>
                    <div class="col text-end">
                        <p class="fw-bold">Rating: @restaurant.Rating</p>

                        <a href="/SingleRestaurant/@restaurant.RestaurantID" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>

